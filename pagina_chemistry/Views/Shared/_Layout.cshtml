<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Magic Chemistry", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Pedido", "Index", "Pedido")</li>
                    <li>@Html.ActionLink("Pedido+", "Create", "Pedido")</li>

                    <li>@Html.ActionLink("Usuario", "Index", "Usuario")</li>
                    <li>@Html.ActionLink("Usuario+", "Create", "Usuario")</li>

                    <li>@Html.ActionLink("Articulo", "Index", "Articulo")</li>
                    <li>@Html.ActionLink("Articulo+", "Create", "Articulo")</li>

                    <li>@Html.ActionLink("Articulo_P", "Index", "Articulo_pedidoPedido")</li>
                    <li>@Html.ActionLink("Articulo_P+", "Create", "Articulo_pedidoPedido")</li>


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Cerrar Sesion", "LogOut", "Auth")</li>
                        <li>
                            <!-- utilizamos el nombre o mail guardado en la sesion -->
                            <a>  @User.Identity.Name </a>

                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Iniciar Sesion", "Login", "Auth")</li>}
                    <!-- texto del link, nombre de funcion o accion, nombre del controlador -->
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>