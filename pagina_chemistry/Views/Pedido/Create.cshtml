@model Lib_clases.Pedido

@{
    ViewBag.Title = "Crear";
}

@Html.ValidationSummary()


<div class="container">
    <div class="col-lg-offset-5">
        <h2>Crear Pedido</h2>

        @using (Html.BeginForm())
        {

            @Html.LabelFor(p => p.Id_usuario);<br />
            @Html.TextBoxFor(p => p.Id_usuario, new { @class = "aDatePicker", autocomplete = "off" });
            <br />
            @Html.LabelFor(p => p.Estado_pedido);<br />
            @Html.TextBoxFor(p => p.Estado_pedido, new { @class = "aDatePicker", autocomplete = "off" });
            <br />
            @Html.LabelFor(p => p.Fecha_solicitud);<br />
            @Html.TextBoxFor(p => p.Fecha_solicitud, new { @class = "aDatePicker", autocomplete = "off" });
            <br />
            @Html.LabelFor(p => p.Fecha_entrega);<br />
            @Html.TextBoxFor(p => p.Fecha_entrega, new { @class = "aDatePicker", autocomplete = "off" });
            <br />

            <button>Guardar</button>
        }

    </div>
</div>