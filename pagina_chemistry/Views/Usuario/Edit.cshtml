@model Lib_clases.Usuario
@using Lib_clases

@{
    ViewBag.Title = "Editar";
}

@TempData["mensaje"];

<div class="container">
    <div class="col-lg-offset-5">

        <h2>Modificar Usuario</h2>

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(p => p.Id_usuario)

            @Html.LabelFor(p => p.Nombre_usuario);
            <br />
            @Html.TextBoxFor(p => p.Nombre_usuario, new { @class = "aDatePicker", autocomplete = "off" });
            <d style="color:red;"> @Html.ValidationMessageFor(p => p.Nombre_usuario) </d>
            <br />
            @Html.LabelFor(p => p.Clave);
            <br />
            @Html.TextBoxFor(p => p.Clave, new { @class = "aDatePicker", autocomplete = "off" });
            <d style="color:red;"> @Html.ValidationMessageFor(p => p.Clave) </d>
            <br />
            @Html.LabelFor(p => p.Nombre);
            <br />
            @Html.TextBoxFor(p => p.Nombre, new { @class = "aDatePicker", autocomplete = "off" });
            <d style="color:red;"> @Html.ValidationMessageFor(p => p.Nombre) </d>
            <br />
            @Html.LabelFor(p => p.Apellido);
            <br />
            @Html.TextBoxFor(p => p.Apellido, new { @class = "aDatePicker", autocomplete = "off" });
            <d style="color:red;"> @Html.ValidationMessageFor(p => p.Apellido) </d>
            <br />
            @Html.LabelFor(p => p.Edad);
            <br />
            @Html.TextBoxFor(p => p.Edad, new { @class = "aDatePicker", autocomplete = "off" });
            <d style="color:red;"> @Html.ValidationMessageFor(p => p.Edad) </d>
            <br />
            @Html.LabelFor(p => p.Tipo_usuario);
            <br />
            @Html.DropDownListFor(p => p.Tipo_usuario,
                     new SelectList(Enum.GetValues(typeof( Usuario.e_tipo_usuario ))))
            <br />
            @Html.LabelFor(p => p.Estado_usuario);
            <br />
            @Html.DropDownListFor(p => p.Estado_usuario,
                     new SelectList(Enum.GetValues(typeof( Usuario.e_estado_usuario ))))
            <br />

            <button>Modificar</button>
        }

    </div>
</div>



